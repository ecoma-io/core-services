{
  "name": "eslint-rules",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/eslint-rules",
  "tags": ["type:tools"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{projectRoot}/coverage/"],
      "options": {
        "jestConfig": "tools/eslint-rules/jest.config.ts"
      }
    }
  }
}
