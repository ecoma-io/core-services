{
  "name": "nx-typescript",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nx-typescript/src",
  "projectType": "library",
  "tags": ["type:packages"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "{projectRoot}/dist",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "assets": [
          "{projectRoot}/*.md",
          "{projectRoot}/executors.json",
          "{projectRoot}/generators.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{projectRoot}/coverage/"],
      "options": {
        "jestConfig": "packages/nx-typescript/jest.config.mjs"
      }
    },
    "publish": {
      "executor": "@ecoma-io/nx-typescript:publish",
      "options": { "syncRepoVersion": true }
    }
  }
}
